<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:layout_height="match_parent"
    tools:context=".InfoProductFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageProductInfo"
            android:src="@drawable/goods_icon_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="30dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleInfoProduct"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageProductInfo">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionInfoProduct"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/titleInfoProduct">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brandInfoProduct"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_margin="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/descriptionInfoProduct">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceInfoProduct"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="20dp"
            android:textColor="@color/ColorRed"
            app:layout_constraintTop_toBottomOf="@+id/brandInfoProduct">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>